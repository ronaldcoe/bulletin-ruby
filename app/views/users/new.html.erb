<!-- app/views/users/new.html.erb -->
<div class="bg-white mx-auto flex rounded shadow">
    <div class="p-8 bg-blue-50  flex flex-col justify-between hidden md:flex">
        <h1 class="text-xl text-blue-700">Bulletin App</h1>
        <%= image_tag('signup.svg', alt: 'Bulletin App', class: 'w-64 h-64') %>
        <a href="/login" class="text-xs hover:underline">Made by Ronald Coello</a>
    </div>
    <div class="py-8 px-32">
        <h1 class="text-md mb-8">Start by creating an account</h1>

        <%= form_with(model: @user, local: true) do |form| %>
        <p>
            <%= form.label :name , class:'label'%>
            <%= form.text_field :name, class:'input'%>
        </p>

        <p>
            <%= form.label :email, class:'label' %>
            <%= form.email_field :email, class:'input' %>
        </p>

        <p>
            <%= form.label :password, class:'label' %>
            <%= form.password_field :password, class:'input' %>
        </p>

        <p>
            <%= form.label :password_confirmation, class:'label' %>
            <%= form.password_field :password_confirmation, class:'input' %>
        </p>

        <p>
            <%= form.submit "Signup", class:'button mt-8 w-full' %>
        </p>
    </div>
</div>
<% end %>
